import React, { useMemo, useRef, useState } from "react";
import { View, Text, Pressable, StyleSheet, Platform } from "react-native";
import { useLocalSearchParams, useRouter } from "expo-router";
import { WebView } from "react-native-webview";
import * as WebBrowser from "expo-web-browser";
import { Ionicons } from "@expo/vector-icons";
import { SafeAreaView, useSafeAreaInsets } from "react-native-safe-area-context";

export default function BlogPostWebScreen() {
  const router = useRouter();
  const insets = useSafeAreaInsets();
  const { slug } = useLocalSearchParams<{ slug?: string }>();
  const webRef = useRef<WebView>(null);
  const [canGoBack, setCanGoBack] = useState(false);

  const url = useMemo(() => {
    const safeSlug = typeof slug === "string" ? slug : "";
    return `https://whatyoudink.com/post.php?slug=${encodeURIComponent(safeSlug)}&app=1`;
  }, [slug]);

  const injectedJS = useMemo(() => {
    // Avoid a "blank bar" outside the WebView. Instead, add padding INSIDE the webpage so
    // the article content doesn't sit under Android's nav/gesture area.
    const bottom = Math.max(0, Math.floor(insets.bottom || 0));
    const top = Math.max(0, Math.floor(insets.top || 0));
    return `
      (function() {
        try {
          var bottom = ${bottom};
          // Ensure the page can scroll past the nav bar without showing a separate native-colored bar.
          document.documentElement.style.paddingBottom = bottom + 'px';
          document.body.style.paddingBottom = bottom + 'px';

          // Some sites set backgrounds on html/body; keep them consistent.
          // If your site uses a non-white background, you can change this color later.
          document.documentElement.style.backgroundColor = 'transparent';
          document.body.style.backgroundColor = 'transparent';
        } catch (e) {}
      })();
      true;
    `;
  }, [insets.bottom, insets.top]);

  const handleBack = () => {
    if (canGoBack && webRef.current) {
      webRef.current.goBack();
      return;
    }
    router.back();
  };

  const openInBrowser = async () => {
    try {
      await WebBrowser.openBrowserAsync(url);
    } catch {
      // no-op
    }
  };

  return (
    // Only handle TOP safe area here; bottom padding is handled inside the WebView via injected JS
    <SafeAreaView style={styles.safe} edges={["top"]}>
      <View style={[styles.topBar, { paddingTop: insets.top, height: 48 + insets.top }]}>
        <Pressable onPress={handleBack} style={styles.iconBtn} hitSlop={10}>
          <Ionicons name="chevron-back" size={24} color="#fff" />
        </Pressable>

        <Text style={styles.title} numberOfLines={1}>
          Article
        </Text>

        <Pressable onPress={openInBrowser} style={styles.iconBtn} hitSlop={10}>
          <Ionicons name="open-outline" size={22} color="#fff" />
        </Pressable>
      </View>

      <WebView
        ref={webRef}
        source={{ uri: url }}
        style={styles.web}
        onNavigationStateChange={(navState) => setCanGoBack(!!navState.canGoBack)}
        injectedJavaScript={injectedJS}
        allowsBackForwardNavigationGestures={Platform.OS === "ios"}
      />
    </SafeAreaView>
  );
}

const styles = StyleSheet.create({
  safe: { flex: 1, backgroundColor: "#0b0f14" },
  topBar: {
    paddingHorizontal: 10,
    flexDirection: "row",
    alignItems: "flex-end",
    justifyContent: "space-between",
    backgroundColor: "#0b0f14",
    borderBottomWidth: StyleSheet.hairlineWidth,
    borderBottomColor: "rgba(255,255,255,0.12)",
  },
  iconBtn: {
    width: 44,
    height: 44,
    alignItems: "center",
    justifyContent: "center",
  },
  title: {
    color: "#fff",
    fontSize: 16,
    fontWeight: "600",
    flex: 1,
    textAlign: "center",
    marginHorizontal: 8,
    paddingBottom: 10,
  },
  web: { flex: 1, backgroundColor: "transparent" },
});
